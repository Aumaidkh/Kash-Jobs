<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:elevation="20dp"
        android:background="@color/white"
        app:cardCornerRadius="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">


            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/job_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="20sp"
                    android:textColor="@color/company_color"
                    android:layout_marginStart="10dp"
                    android:text="@string/job_type"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/company_color"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/company_name" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/company_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/location_small"
                    android:drawablePadding="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/company_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/company_address"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dl_experience_tv"
                    android:drawableStart="@drawable/experience_small"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/salary_color"
                    android:textSize="12sp"
                    android:text="1 - 4 years"
                    app:fontFamily="@font/open_sans" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dl_skills_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/skills_small"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/salary_color"
                    android:textSize="12sp"
                    android:text="@string/dl_tv_skills_required"
                    app:fontFamily="@font/open_sans" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/salary"
                    android:layout_width="wrap_content"
                    android:drawableStart="@drawable/money_small"
                    android:drawablePadding="10dp"
                    android:background="@color/status_bar_color"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/salary_color"
                    android:textSize="12sp"
                    android:text="@string/salary"
                    app:fontFamily="@font/open_sans" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/posted_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/open_sans"
                    android:textSize="9sp"
                    android:textColor="@color/salary_color"
                    android:text="@string/posted_on"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">




                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/recycler_view_apply_now_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/apply_small"
                    android:drawableTint="@color/start_color"
                    android:textColor="@color/company_color"
                    android:fontFamily="@font/noto_sans"
                    android:text="Apply Now" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/verified_tag"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vd_vector"/>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>