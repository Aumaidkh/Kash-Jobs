<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:transitionName="save_salary_details_transition"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:foregroundTint="@color/white">

            <com.google.android.material.textview.MaterialTextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Job description"
                android:textAlignment="textStart"
                android:fontFamily="@font/roboto_medium"
                android:textSize="30sp"
                android:textColor="@color/heading_text_color"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/description_illustration"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundTint="@color/white">


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--Set Programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/pj_job_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Principal SDE"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:textColor="@color/heading_text_color"
                    />

                <!--Set Programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/pj_company_name_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tesla - Gharuan, Punjab"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/body_text_color"
                    />

                <!--Set Programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/pj_salary_range_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs 5000 - Rs 6000 per month"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/body_text_color"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Describe responsibilities of this job, required work experience"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/body_text_color"
                    />

                <!--Job description text box-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeWidthFocused="2dp"
                    android:focusable="true"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pj_job_description_text_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:gravity="top"
                        android:inputType="textMultiLine"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Describe briefly the relevant skills required for the job."
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/body_text_color"
                    />

                <!--Job description text box-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeWidthFocused="2dp"
                    android:focusable="true"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pj_skills_text_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:gravity="top"
                        android:inputType="textMultiLine"/>

                </com.google.android.material.textfield.TextInputLayout>




                <!--Next Button-->
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/text_box_color"
                    android:onClick="nextPage"
                    android:padding="15dp"
                    android:transitionName="save_job_description_transition"
                    android:text="Save and Continue"
                    app:cornerRadius="5dp" />

                <!--Back Button-->
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:padding="15dp"
                    android:text="Back"
                    app:strokeColor="@color/body_text_color"
                    app:strokeWidth="1dp"
                    android:textColor="@color/black"
                    app:cornerRadius="5dp" />




            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>