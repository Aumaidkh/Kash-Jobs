<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Job Highlights Card-->
        <androidx.cardview.widget.CardView
            android:elevation="10dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Highlights"
                    android:textColor="#0d0d0d"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"
                    />

                  <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fg_company_address"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/location_small"
                    android:drawablePadding="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/company_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/company_address"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dl_experience_tv"
                    android:drawableStart="@drawable/experience_small"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/salary_color"
                    android:textSize="12sp"
                    android:text="1 - 4 years"
                    app:fontFamily="@font/open_sans" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dl_skills_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/skills_small"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/salary_color"
                    android:textSize="12sp"
                    android:text="@string/dl_tv_skills_required"
                    app:fontFamily="@font/open_sans" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/salary"
                    android:layout_width="wrap_content"
                    android:drawableStart="@drawable/money_small"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/salary_color"
                    android:textSize="12sp"
                    android:text="@string/salary"
                    app:fontFamily="@font/open_sans" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/posted_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/open_sans"
                    android:textSize="9sp"
                    android:textColor="@color/salary_color"
                    android:text="@string/posted_on"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <!--Job Description Card-->
        <androidx.cardview.widget.CardView
            android:elevation="10dp"
            android:layout_margin="8dp"
            android:foregroundTint="@color/white"
            app:cardCornerRadius="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Job Description Heading-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Description"
                    android:textColor="#0d0d0d"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"
                    />

                <!--Set this Text Programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jd_is_looking_for"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/company_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/noto_sans"
                    android:text="Tesla Motors is currently hiring for the C# JavaScript Developer"/>

                <!--Job description subheading-->
                <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:text="Job description" />

                <!--Desired Candidate Profile Heading-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Desired Candidate Profile" />

                <!-- Set this Programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/desired_candidate_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:text="@string/jd_desired_candidate_profile" />

                <!--Other details Heading-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Other Details" />

                <!--Set this programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jd_qualifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:text="Qualification: B.E/BTech/Graduate/BCA" />

                <!--Set this programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jd_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:text="Experience: 6 Months 1 Years" />

                <!--Set this programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jd_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:text="Skills: C#, XML, HTML, CSS, XPATH" />

                <!--Industry Type Heading-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Industry Type" />

                <!--Set this programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jd_industry_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:text="IT-Software, Software Services" />

                <!--Role Type Heading-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Role" />

                <!--Set this programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jd_role_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:text="Software Developer" />

                <!--Employment Type Heading-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Employment Type" />

                <!--Set this programatically-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jd_employment_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:text="Part-Time, Full-Time" />


                <!--Education Heading-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Education" />

                <!--Set this programatically and set it in bullets-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jd_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/heading_text_color"
                    android:textSize="12sp"
                    android:text="Btech, Mtech, BCA"/>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <!--About Company Card-->
        <androidx.cardview.widget.CardView
            android:elevation="10dp"
            android:layout_margin="8dp"
            android:foregroundTint="@color/white"
            app:cardCornerRadius="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--About Company Heading use scroll to functionality-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jd_about_company_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Company"
                    android:textColor="#0d0d0d"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"
                    />

                <!--Set Programatically -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jd_company_info"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/company_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/jd_desired_candidate_profile"/>

                <!--Company Info Heading-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Info"
                    android:textColor="#0d0d0d"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"
                    />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:rowCount="2"
                    android:columnCount="2">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/company_color"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginEnd="50dp"
                        android:text="Company Name"/>

                    <!--Set programatically-->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/jd_company_name"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/heading_text_color"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Tesla Motors Pvt. Ltd."/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/company_color"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginEnd="50dp"
                        android:text="Headquarters"/>

                    <!--Set programatically-->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/jd_company_address"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/heading_text_color"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Silicon Valley Florida"/>

                </GridLayout>



            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>

</ScrollView>