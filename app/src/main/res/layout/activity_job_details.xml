<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:transitionName="save_job_details_transition"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:foregroundTint="@color/white">

            <com.google.android.material.textview.MaterialTextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Job Details"
                android:textAlignment="textStart"
                android:fontFamily="@font/roboto_medium"
                android:textSize="30sp"
                android:textColor="@color/heading_text_color"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/job_details"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundTint="@color/white">


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--Job Title Box-->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="60dp"
                    android:hint="Job Title"
                    app:boxStrokeColor="@color/text_box_color"
                    android:focusable="true"
                    app:hintTextColor="@color/status_bar_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pj_job_title_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!--Employment Type Check Boxes Box-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Job Type"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16dp"
                    android:textColor="@color/heading_text_color"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/full_time_check_box"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full-Time"
                        android:onClick="onCheckBoxClicked"
                        android:tag="0"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/black_rectangle"
                        android:textColor="@color/body_text_color"/>

                    <CheckBox
                        android:layout_marginTop="5dp"
                        android:id="@+id/part_time_check_box"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Part-Time"
                        android:onClick="onCheckBoxClicked"
                        android:tag="1"
                        android:background="@drawable/black_rectangle"
                        android:textColor="@color/body_text_color"/>

                    <CheckBox
                        android:layout_marginTop="5dp"
                        android:id="@+id/temporary_check_box"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temporary"
                        android:onClick="onCheckBoxClicked"
                        android:tag="2"
                        android:background="@drawable/black_rectangle"
                        android:textColor="@color/body_text_color"/>

                    <CheckBox
                        android:layout_marginTop="5dp"
                        android:id="@+id/contract_check_box"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contract"
                        android:onClick="onCheckBoxClicked"
                        android:tag="3"
                        android:background="@drawable/black_rectangle"
                        android:textColor="@color/body_text_color"/>

                    <CheckBox
                        android:layout_marginTop="5dp"
                        android:id="@+id/internship_check_box"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Internship"
                        android:onClick="onCheckBoxClicked"
                        android:tag="4"
                        android:background="@drawable/black_rectangle"
                        android:textColor="@color/body_text_color"/>

                </LinearLayout>


                <!--Number of Hirees-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Number of Hirees"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16dp"
                    android:textColor="@color/heading_text_color"
                    />
                <Spinner
                    android:id="@+id/number_of_hirees_spinner"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/black_rectangle"
                    />


                <!--Next Button-->
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/text_box_color"
                    android:onClick="nextPage"
                    android:padding="15dp"
                    android:transitionName="save_job_details_transition"
                    android:text="Save and Continue"
                    app:cornerRadius="5dp" />

                <!--Back Button-->
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:padding="15dp"
                    android:text="Back"
                    app:strokeColor="@color/body_text_color"
                    app:strokeWidth="1dp"
                    android:textColor="@color/black"
                    app:cornerRadius="5dp"
                    />




            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>