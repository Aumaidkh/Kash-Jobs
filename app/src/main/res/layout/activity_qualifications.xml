<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionName="save_job_description_transition"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="10dp"
            android:elevation="2dp"
            android:foregroundTint="@color/white"
            app:cardCornerRadius="5dp">

            <com.google.android.material.textview.MaterialTextView
                android:transitionName="edit_qualifications_transition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Applicants Qualifications"
                android:textAlignment="textStart"
                android:textColor="@color/heading_text_color"
                android:textSize="30sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp"
                android:src="@drawable/educational_qualifications_illustrations" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="2dp"
            android:foregroundTint="@color/white"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <!--Experience Heading-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/pj_job_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Experience"
                    android:textColor="@color/heading_text_color"
                    android:textSize="16sp" />

                <!--Experience Text View-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="How many years of experience should the candidate have?"
                    android:textColor="@color/body_text_color"
                    android:textSize="14sp" />

                <!--Experience text box-->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeWidthFocused="2dp">

                    <!--Append years Programatically-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pj_experience_text_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:inputType="number"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--Education Heading-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Minimum Qualifications"
                    android:textColor="@color/heading_text_color"
                    android:textSize="16sp" />

                <!--Experience Text View-->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="What is the highest level of Education the candidate must have?"
                    android:textColor="@color/body_text_color"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/pj_education_spinner"
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/black_rectangle" />

                <!--Next Button-->
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/text_box_color"
                    android:onClick="nextPage"
                    android:padding="15dp"
                    android:transitionName="save_qualifications_transition"
                    android:text="Save and Continue"
                    app:cornerRadius="5dp" />

                <!--Back Button-->
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:padding="15dp"
                    android:text="Back"
                    app:strokeColor="@color/body_text_color"
                    app:strokeWidth="1dp"
                    android:textColor="@color/black"
                    app:cornerRadius="5dp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>