<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aumaid.jobskash">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KashJobs">
        <activity android:name=".User.PostJobs.PreviewJob" />
        <activity android:name=".User.PostJobs.Qualifications" />
        <activity android:name=".User.PostJobs.JobDescription" />
        <activity android:name=".User.PostJobs.SalaryDetails" />
        <activity android:name=".User.PostJobs.JobDetails" />
        <activity android:name=".User.PostJobs.CompanyDetails" />
        <activity android:name=".User.JobApplicationPage" android:theme="@style/Theme.KashJobs.JobsApplication"/>
        <activity android:name=".Common.SuccessScreen" />
        <activity android:name=".User.HomePage" />
        <activity android:name=".Common.VerifyOtp" />
        <activity android:name=".Common.LogInSignUp.SignUpThirdPage" />
        <activity android:name=".Common.LogInSignUp.SignUpSecondPage" />
        <activity android:name=".Common.LogInSignUp.SignUpFirstPage" />
        <activity android:name=".Common.LogInSignUp.SignInPage" />
        <activity android:name=".Common.WelcomeScreen" />
        <activity android:name=".Common.SplashScreen" android:theme="@style/Theme.KashJobs.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>